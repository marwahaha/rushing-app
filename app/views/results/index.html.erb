<button onclick="downloadResults(this)">Download</button>

<input id="player-name" type="text"><br>
<button filter="player-name" onclick="updateResults(this)">Filter</button>

<div id="results-table">
  <div>Player</div>
  <div>Team</div>
  <div>Pos</div>
  <div>Att</div>
  <div>Att/G</div>
  <div>Yds</div>
  <button sortby="Yds" onclick="updateResults(this)">Yds</button>
  <div>Avg</div>
  <div>Yds/G</div>
  <button sortby="TD" onclick="updateResults(this)">TD</button>
  <button sortby="Lng" onclick="updateResults(this)">Lng</button>
  <div>1st</div>
  <div>1st%</div>
  <div>20+</div>
  <div>40+</div>
  <div>FUM</div>

  <%= render "results" %>
</div>
